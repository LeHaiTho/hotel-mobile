{
  "extends": "@react-native/typescript-config/tsconfig.json",
  // Cấu hình khai báo alias
  // Khi đường dẫn tương đối quá dài: Nếu bạn thấy mình đang sử dụng nhiều ../ để điều hướng qua các thư mục, alias sẽ giúp đơn giản hóa việc này.
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@naviagtion/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@stores/*": ["src/stores/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
